<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">

    <filter>
        <filter-name>LoggingFilter</filter-name>
        <filter-class>filter.LoggingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoggingFilter</filter-name>
        <url-pattern>/servlet/*</url-pattern>
        <url-pattern>/Category.jsp</url-pattern>
        <url-pattern>/category</url-pattern>
        <url-pattern>/ManagerProduct.jsp</url-pattern>
        <url-pattern>/ManagerAccount.jsp</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LoginControl</servlet-name>
        <servlet-class>control.LoginControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserProfileController</servlet-name>
        <servlet-class>control.UserProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>control.ChangePasswordServlet</servlet-class>
    </servlet>

    <listener>
        <listener-class>listener.SessionCounterListener</listener-class>
    </listener>

    <session-config>
        <session-timeout>30</session-timeout> <!-- 30 phÃºt -->
    </session-config>

    <servlet-mapping>
        <servlet-name>LoginControl</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserProfileController</servlet-name>
        <url-pattern>/userprofile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/changePassword</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>OrderManagementControl</servlet-name>
        <servlet-class>control.OrderManagementControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderManagementControl</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderDetailControl</servlet-name>
        <servlet-class>control.OrderDetailControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderDetailControl</servlet-name>
        <url-pattern>/order-detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderConfirmControl</servlet-name>
        <servlet-class>control.OrderConfirmControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderConfirmControl</servlet-name>
        <url-pattern>/confirm-order</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateOrderStatusControl</servlet-name>
        <servlet-class>control.UpdateOrderStatusControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateOrderStatusControl</servlet-name>
        <url-pattern>/update-order-status</url-pattern>
    </servlet-mapping>
    <listener>
    <listener-class>listener.SessionListener</listener-class>
</listener>

</web-app>
